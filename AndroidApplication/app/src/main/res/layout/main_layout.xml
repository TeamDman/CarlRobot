<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.dominicphillips.carlapplication.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CarlRobotics.com"
        android:id="@+id/text_greetings"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textSize="24dp"
        android:textAlignment="center"
        android:textColor="#ff0000"
        android:autoLink="web"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Controller"
        android:onClick="showController"
        android:id="@+id/button_controller"
        android:nestedScrollingEnabled="true"
        android:layout_below="@+id/text_warning"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Action Menu"
        android:onClick="showActions"
        android:id="@+id/button_actions"
        android:nestedScrollingEnabled="true"
        android:layout_below="@+id/button_controller"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dominic Phillips 2016"
        android:id="@+id/text_author"
        android:textSize="12dp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Update [loading]"
        android:id="@+id/text_update"
        android:textAlignment="center"
        android:layout_below="@+id/text_helper"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Make sure you are on the same network as the robot!"
        android:id="@+id/text_warning"
        android:textAlignment="center"
        android:layout_below="@+id/text_update"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Design 1st"
        android:id="@+id/text_helper"
        android:textSize="24dp"
        android:textAlignment="center"
        android:textColor="#ff0000"
        android:autoLink="web"
        android:layout_below="@+id/text_greetings"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
