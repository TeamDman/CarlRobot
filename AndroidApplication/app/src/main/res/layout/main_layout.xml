<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="ca.dominicphillips.carlapplication.MainActivity">

        <TextView
            android:id="@+id/text_greetings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:autoLink="web"
            android:text="CarlRobotics.com"
            android:textAlignment="center"
            android:textColor="#ff0000"
            android:textSize="24dp" />

        <Button
            android:id="@+id/button_controller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/text_update"
            android:nestedScrollingEnabled="true"
            android:onClick="showController"
            android:text="Open Controller" />

        <Button
            android:id="@+id/button_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/button_controller"
            android:nestedScrollingEnabled="true"
            android:onClick="showActions"
            android:text="Open Action Menu" />

        <TextView
            android:id="@+id/text_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="Dominic Phillips 2016"
            android:textAlignment="center"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/text_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_helper"
            android:text="Update [loading]"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/text_helper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_greetings"
            android:layout_centerHorizontal="true"
            android:autoLink="web"
            android:text="Design 1st"
            android:textAlignment="center"
            android:textColor="#ff0000"
            android:textSize="24dp" />

    <Button
        android:id="@+id/button_robotlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="true"
        android:onClick="showRobotList"
        android:text="Open Robot List"
        android:layout_below="@+id/button_actions"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_restart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="true"
        android:onClick="restartRobot"
        android:text="Restart Robot"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/text_author"
        android:layout_alignParentEnd="true" />


</RelativeLayout>

